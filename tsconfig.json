//Para remover coment√°rios para o arquivo final.
// utiliza o removeComments = true

{
    "compilerOptions": {
        "outDir": "app/dist/js",
        "target": "ES6",
        "noEmitOnError": true,
        "noImplicitAny": true,
        "removeComments": true,
        "strictNullChecks": true,
        //para ativar o decorators no compilador.
        "experimentalDecorators": true,
        "sourceMap": true
    },
    "include": ["app/**/*"]
}